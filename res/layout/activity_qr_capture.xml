<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<SurfaceView
	    android:id="@+id/qr_capture_preview_view"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:layout_height="match_parent" />

	<gabriel.luoyer.promonkey.zxing.view.ViewfinderView
		android:id="@+id/qr_capture_viewfinder_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#30000000"/>
	
    <RelativeLayout
        style="@style/title_bar_style"
        android:background="#50000000"
        android:layout_alignParentTop="true" >
        <ImageButton
            style="@style/title_btn_back_style"
            android:contentDescription="@null" />
       <TextView
           style="@style/title_tv_style"
           android:text="@string/str_title_zxing" />
       <Button
           android:id="@+id/qr_capture_torch"
           style="@style/title_btn_right_style"
           android:text="@string/str_zxing_torch_toggle" />
	</RelativeLayout>
	
   </RelativeLayout>