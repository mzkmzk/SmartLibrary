<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >
    <!--  android:layout_below="@id/title" -->  
     <ScrollView    
	    android:layout_width="fill_parent"    
	    android:layout_height="fill_parent" 
	    android:scrollbars="none"    
	    android:fadingEdge="vertical">   
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >    

	     <!--  android:layout_marginTop="30.0dip"-->
	    <RelativeLayout
	        android:id="@+id/rl_studentID"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	       
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="学号" />
			
			<TextView
			    android:id="@+id/text_studentID_Right"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:textColor="@color/color_hint" />
			
			<TextView
	            android:id="@+id/text_studentID"
	            style="@style/Smile.TextView._Black"
	        	android:layout_toLeftOf="@id/text_studentID_Right"
	            android:layout_centerVertical="true"
	            android:text="6011203157"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	        <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_line_width_2"
	        android:background="@drawable/prefresh_list_cutline" >
	    </View>
	    <!--  android:layout_marginTop="30.0dip" -->
		<RelativeLayout
		    android:id="@+id/rl_studentName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	       
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="姓名" />
			
			<TextView
			    android:id="@+id/text_studentName_Right"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:textColor="@color/color_hint" />
			
			<TextView
	            android:id="@+id/text_studentName"
	            style="@style/Smile.TextView._Black"
	        	android:layout_toLeftOf="@id/text_studentName_Right"
	            android:layout_centerVertical="true"
	            android:text="麦志坤"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	    
		 <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_line_width_2"
	        android:background="@drawable/prefresh_list_cutline" >
	    </View>
	    
		  <!--  android:layout_marginTop="30.0dip" -->
		<RelativeLayout
		    android:id="@+id/rl_studentPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	       
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="修改密码" />
			
			<TextView
			    android:id="@+id/text_studentPassword_Right"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:drawableRight="@drawable/ic_common_arrow"
	            android:textColor="@color/color_hint" />
			
			<TextView
	            android:id="@+id/text_studentPassword"
	            style="@style/Smile.TextView._Black"
	        	android:layout_toLeftOf="@id/text_studentPassword_Right"
	            android:layout_centerVertical="true"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>

	
	</LinearLayout>
	</ScrollView>
</LinearLayout>